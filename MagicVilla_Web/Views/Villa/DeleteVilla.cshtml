@model MagicVilla_Web.Models.DTO.VillaDto

<form asp-action="DeleteVilla">
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Delete Villa</h1>
		<hr />
		<input hidden asp-for="Id" />
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="col-2">
				<label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10">
				<input disabled asp-for="@Model.Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="Rate" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10">
				<input disabled asp-for="@Model.Rate" class="form-control" />
				<span asp-validation-for="Rate" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="Details" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10">
				<textarea disabled asp-for="@Model.Details" class="form-control" rows="5"></textarea>
				<span asp-validation-for="Details" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="Sqft" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10">
				<input disabled asp-for="@Model.Sqft" class="form-control" />
				<span asp-validation-for="Sqft" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="Occupancy" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10">
				<input disabled asp-for="@Model.Occupancy" class="form-control" />
				<span asp-validation-for="Occupancy" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10">
				<input disabled asp-for="@Model.ImageUrl" class="form-control" />
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="Amenity" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10">
				<textarea disabled asp-for="@Model.Amenity" class="form-control" rows="5"></textarea>
				<span asp-validation-for="Amenity" class="text-danger"></span>
			</div>
			<div class="col-5 offset-2">
				<a asp-action="IndexVilla" class="btn-primary btn form-control">Back to List</a>
			</div>
			<div class="col-5">
				<input type="submit" value="Delete" class="btn-danger btn form-control" />
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}